<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/success_dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/dp" />

        <TextView
            android:id="@+id/success_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/success_words"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="Sample sfafa fasfasfasf Name"
            android:textAlignment="textStart"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/success_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/success_name"
            android:layout_below="@+id/success_name"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="Sample Company fsafsaf Name Name"
            android:textAlignment="textStart"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/success_words"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:minHeight="110dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/allan_bold"
            android:padding="5dp"
            android:gravity="center"
            android:text="@string/sample_words"
            android:textSize="15dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
