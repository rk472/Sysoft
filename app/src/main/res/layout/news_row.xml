<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="360dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:elevation="20dp"
    android:layout_marginRight="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="20">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:id="@+id/news_row_pic"
                android:src="@drawable/back35"/>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="13"
                android:padding="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/news_row_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Recently , "
                    android:textColor="#137067"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/news_row_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Title"
                    android:textAllCaps="true"
                    android:layout_below="@id/news_row_recent"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/news_row_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="80dp"
                    android:layout_below="@id/news_row_title"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Description"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/news_row_know_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Click to Know More "
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#137067"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>