<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ContactFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/logo"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Worried About Your Future ?"
                    android:textAlignment="center"
                    android:textColor="#5d8fb9"
                    android:textSize="21dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Join Us Now !!!"
                    android:textAlignment="center"
                    android:textColor="#5d8fb9"
                    android:textSize="21dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita_bold"
                    android:layout_margin="5dp"
                    android:text="@string/wallk"
                    android:textAlignment="center"
                    android:textColor="#d20228"
                    android:textSize="19dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="We are Ready to help"
                    android:textAlignment="center"
                    android:textColor="#5d8fb9"
                    android:textSize="21dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Sysoft Bhubaneswar Team"
                    android:textAlignment="center"
                    android:textColor="#5d8fb9"
                    android:textSize="21dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:elevation="7dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:clickable="true"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#3d599f"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="39dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/vect_call_us"
                                    android:onClick="call"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:elevation="7dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:clickable="true"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#3d599f"
                                android:padding="1dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/logo_fb"
                                    android:onClick="fb"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:elevation="7dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:clickable="true"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#3d599f"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/vect_find_us"
                                    android:onClick="map"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</FrameLayout>