<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="220dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="20">

            <ImageView
                android:id="@+id/course_row_dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:scaleType="centerCrop"
                android:src="@drawable/back35" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:padding="10dp">
                <TextView
                    android:id="@+id/id_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Explore Now "
                    android:textColor="#137067"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/course_row_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:layout_marginTop="5dp"
                    android:text="Name"
                    android:layout_below="@id/id_recent"
                    android:textAllCaps="true"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/course_row_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/course_row_name"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Duration"
                    android:textAllCaps="true"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/course_row_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/course_row_duration"
                    android:fontFamily="@font/arbutus_slab"
                    android:layout_marginTop="3dp"
                    android:text="fee"
                    android:textAllCaps="true"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/course_row_syllabus"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:elevation="20dp"
                    android:text="View Syllabus"
                    android:textSize="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/fill_shape"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>