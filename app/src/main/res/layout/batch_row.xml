<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="250dp"
    android:layout_height="220dp" android:orientation="vertical"
    android:gravity="center"
    android:layout_marginRight="5dp"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/batch_row_new"
        android:textColor="#ffffff"
        android:text="new"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/batch_row_pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Title"
        android:textColor="#ffffff"
        android:id="@+id/batch_row_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Starts from"
        android:textColor="#ffffff"
        android:id="@+id/batch_row_start"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="timing"
        android:textColor="#ffffff"
        android:id="@+id/batch_row_timing"/>
</LinearLayout>